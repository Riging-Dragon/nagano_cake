<!-- ヘッダー -->

<!-- 内容 -->
<div class ="container">
	<div class ="row">
		<div class ="cart_item-index">
		<h2 class ="cart_item-index-title">ショッピングカート</h2>
			<div class="btn-box text-right">
				
				<%= link_to "カートを空にする", cart_item_destroy_all_path, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class:"btn btn-danger" %>
			</div>
			<table>
				<thead>

					<tr>
						<th>商品名</th>
						<th>単価(税込)</th>
						<th>数量</th>
						<th>小計</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @customer.cart_items.each do |cart_item| %>
					<tr>
						<td><%= cart_item.product.name %></td>
						<td><%= product.non_taxed_price * 1.1 %>円</td>
						<td>
							
						</td>
						<td><%= cart.item.subtotal_price %>円</td>
						<td><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, class:"btn btn-danger" %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>

