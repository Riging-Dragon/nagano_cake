<h1>注文履歴一覧</h1>
<table>
	<tr>
		<th>購入日時</th>
		<th>購入者</th>
		<th>注文個数</th>
		<th>注文ステータス</th>
	</tr>
    <!--前注文詳細の一覧-->
	<% @orders.each do |f| %>
    <tr>
    	<td>
            <%= link_to admins_order_path(f) do %>
                <%= f.ordered_date %>
            <% end %>
        </td>
    	<td><%= f.ordered_name %></td>
    	<!--orderに紐づいたorder_detailの注文個数を合計する処理が必要-->
    	<td><%= f.order_details.ordered_item_count.count %></td>
    	<!--注文ステータス-->
    	<td><%= @order.order_status %></td>
    </tr>
    <% end %>
</table>

