<div class="container">
	<div class="row">
		<h2>ジャンル一覧・追加画面</h2>
		<% if @genre.errors.any? %>
		<!-- new genre form -->
			<div class="new-genre-form">
				<%= form_for [:admin, @genre] do |f| %>
					<%= f.label :name, "ジャンル" %>
					<%= f.text_field :name %>
					<%= f.label :name, "有効" %>
					<%= f.radio_button :active_status, :"有効", checked: true %>
					<%= f.label :name, "無効" %>
					<%= f.radio_button :active_status, :"無効" %>
					<%= f.submit '追加', class:"btn btn-primary" %>
				<% end %>
			</div>
			<!-- genre index -->
			<table class="table genre-index">
				<thead>
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td><%= genre.active_status %></td>
						<td><%= link_to '編集', edit_admin_genre_path(genre.id), class:"btn btn-succes" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>