
 <div class="container">
   <div class="row">
	<h1>マイページ</h1>
	<h4><p><strong>登録情報</strong>
	<%= link_to '編集する', my_page_path,class: "mypage btn btn-primary" %>
	<!-- 下記、link先は実装時に確認すること -->
	<%= link_to 'パスワードを変更する', my_page_path,class: "mypage btn btn-primary" %></p></h4>
	<table class="table">
		<tr>
			<td>氏名</td>
			<td><%= current_customer.last_name_kanji %><%= current_customer.first_name_kanji %></td>
		</tr>
		<tr>
			<td>カナ</td>
			<td><%= current_customer.last_name_kana %><%= current_customer.first_name_kana %></td>
		</tr>
		<tr>
			<td>郵便番号</td>
			<td><%= current_customer.zip_code %></td>
		</tr>
		<tr>
			<td>住所</td>
			<td><%= current_customer.address %></td>
		</tr>
		<tr>
			<td>電話番号</td>
			<td><%= current_customer.phone_number %></td>
		</tr>
		<tr>
			<td>メールアドレス</td>
			<td><%= current_customer.email %></td>
		</tr>
	</table>
	<h4><p><strong>配送先</strong><%= link_to '一覧を見る', deliveries_path,class: "mypage btn btn-primary" %></p></h4>
	<h4><p><strong>注文履歴</strong><%= link_to '一覧を見る', order_details_path,class: "mypage btn btn-primary" %></p></h4>
</div>
</div>

