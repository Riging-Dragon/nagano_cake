<div class="body-height">
<div class="container">
    <div class="row">
       <h1 class="1">注文履歴一覧</h1>
    </div>
    <div class="row">
		<table class="table">
			<tr>
				<th>注文日</th>
				<th>配送先</th>
				<th>注文商品</th>
				<th>支払金額</th>
				<th>ステータス</th>
				<th>注文詳細</th>
			</tr>
			<% @orders.each do |order| %>
			<tr>
				<td>
					<%= order.ordered_date %>
				</td>
				<td>
					<%= order.ordered_zip_code %><br>
					<%= order.ordered_address %><br>
					<%= order.ordered_name %>
				</td>
				<td>
					<% order.order_details.each do |order_detail| %>
					  <%= order_detail.product.name %>
					<% end %>
				</td>
				<!--total_priceとordered_postageを定義する必要あり-->
				<td><%= order.total_price %></td>
				<td><%= order.order_status %></td>	
				<td><%= link_to"表示する", order_detail_path(order), class: 'btn btn-danger' %></td>
			</tr>
			<% end %>
		</table>
    </div>
</div>
</div>