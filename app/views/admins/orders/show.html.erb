<h1>注文履歴詳細</h1>

<div>
	<strong>購入者</strong>
	<%= @customer.name %>
</div>
<div>
	<strong>配送先</strong>
	<%= @order.ordered_zip_code %><br>
	<%= @order.ordered_address %><br>
	<%= @order.ordered_name %>
</div>
<div>
	<strong>支払方法</strong>
	<%= @order.order_method %>
</div>
<!--注文ステータス変更のurl設定が必要-->
<div>
	<strong>注文ステータス</strong>
	<%= form_with model:@order, url:  ,method: :patch, local: true do |f| %>
	<%= f.select :order_status, options_for_select_from_enum %>
</div>

<table>
	<tr>
		<th>商品名</th>
		<th>単価（税込）</th>
		<th>数量</th>
		<th>小計</th>
		<th>製作ステータス</th>
	</tr>
	<% @order_details.each do |f| %>
	<tr>
		<td><%= f.product.name %></td>
		<td><%= f.ordered_price %></td>
		<td><%= f.ordered_item_count %></td>
		<!--小計の定義が必要-->
		<td><%= f.ordered_price * f.ordered_item_count %></td>
		<!--製作ステータスの定義が必要-->
		<td><%= f.production_status %></td>
		<!--パス、コントローラーの整備が必要-->
		<td><%=link_to '更新', %></td>
	</tr>
</table>
