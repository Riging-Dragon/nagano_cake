<div class="body-height">
 <div class="container">
   <div class="row">
		<h1>注文情報入力</h1>

		<%= form_with(model: @order, local: true, url: {action: 'confirm'}) do |f| %>
		    
			<!-- 支払い方法　-->
			<div class="order_method">
			<%= f.label :支払方法 %>
				<label>
				    <%= f.radio_button :order_method, 0, checked: true %>
				    クレジットカード
				</label>
				<label>
				    <%= f.radio_button :order_method, 1 %>
				    銀行振込
				</label>
		    </div>
			<!--　お届け先　-->
			<div class="ordered_address">
			<%= f.label :お届け先 %>
			    <!--　顧客の住所　-->
			    <div class="address">
					<label>
						<%= f.radio_button :add, 1, checked: true %>
						ご自身の住所<br>
						<%= @customer.zip_code %>
						<%= @customer.address %><br>
						<%= @customer.last_name_kanji %><%= @customer.first_name_kanji %>
					</label>
			    </div>
		　　　　　<!--　登録済住所　-->
		        <div class="delivery_address">
					<label>
						<%= f.radio_button :add, 2 %>
						登録済住所から選択
					</label>
					<!--送信したいカラム名, ,表示したい配列, 渡したいデータの入ったカラム名,　表示の仕方（今回は複数カラム を表示したいため、Deliveryのクラスメソッドを指定）-->
					<%= f.collection_select :ordered_address, @deliveries, :id, :full_address %>
		　　　　　</div>
		　　　　　<!--　新規住所　-->
		        <div class="new address">
					<label>
						<%= f.radio_button :add, 3 %>
						新しいお届け先
					</label>
					<%= f.fields_for :new_address do |na| %>
						<label>
							郵便番号
							<%= na.text_field :zip_code, class: 'form-control' %>
						</label>
						<label>
							住所
							<%= na.text_field :delivery_address, class: 'form-control' %>
						</label>
						<label>
							宛名
							<%= na.text_field :delivery_name, class: 'form-control' %>
						</label>
				    <% end %>
				</div>
			</div>

		    <%= f.submit "確認画面へ進む", class: "btn btn-danger" %>

		<% end %>
	</div>
</div>
</div>

