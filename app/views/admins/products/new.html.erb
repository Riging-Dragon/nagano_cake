<div class="container">
	<h1>商品新規登録画面</h1>
	<%= form_for @admins_product, :url => {controller: "products", action: "create"} do |f| %>
		<%= f.attachment_field :image %>
      <h3>商品名          <%= f.text_field :name %></h3>
      <h3>商品説明        <%= f.text_area :description %></h3>
      <h3>ジャンル        <%= f.collection_select :genre_id, Genre.all, :id, :name %></h3>
      <h3>税抜価格        <%= f.number_field :non_taxed_price %>円</h3>
      <h3>販売ステータス   <%= f.select :is_capable, Product.sale_statuses_i18n.keys.map { |k| [Product.sale_statuses_i18n[k], k]} %></h3>
      <%= f.submit '新規登録', class: "btn btn-primary" %>
    <% end %>
</div>
