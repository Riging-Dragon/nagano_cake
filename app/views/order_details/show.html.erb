<div class="body-height">
  <div class="container">
   <div class="row">
<h1>注文履歴詳細</h1>
<h2>>注文情報</h2>
<table>
	<tr>
		<th>注文日</th>
		<td><%= @order.ordered_date %></td>
	</tr>
	<tr>
	    <th>転送先</th>
	    <td><%= @order.ordered_zip_code %><br>
			<%= @order.ordered_address %><br>
			<%= @order.ordered_name %></td>			
	</tr>
	<tr>
	    <th>支払方法</th>
	    <td><%= @order.order_method %></td>			
	</tr>
	<tr>
	    <th>ステータス</th>
	    <td><%= @order.order_status %></td>			
	</tr>
</table>
<h2>請求情報</h2>
<table>
	<tr>
		<th>商品合計</th>
		<td></td>
	</tr>
	<tr>
		<!--配送料は一律800円-->
		<th>配送料</th>
		<td>800</td>
	</tr>
	<tr>
		<!--計算式の入力が必要-->
		<th>ご請求額</th>
		<td></td>
	</tr>
</table>
<h2>注文内容</h2>
<table>
	<tr>
		<th>商品</th>
		<th>単価（税込）</th>
		<th>個数</th>
		<th>小計</th>
	</tr>
	<!--コントローラーに変数の設定が必要-->
	<% @order_details.each do |f| %>
	<tr>
		<th><%= f.product.name %></th>
		<th><%= f.ordered_price %></th>
		<th><%= f.ordered_item_count %></th>
		<th><%= f.ordered_price * f.ordered_item_count * 1.1 %></th>
	</tr>
	<% end %>
</table>
</div>
</div>
</div>
