<div class="container">
	<div class="row">
	<h1>商品詳細画面</h1>
</div>

<%= attachment_image_tag @admins_product, :image, format: 'jpg' ,size: "30x30", fallback: "no_image.jpg" %>

<div class="col">
	<h3>商品名 <%=@admins_product.name %></h3>
	<h3>商品説明 <%=@admins_product.description %></h3>
	<h3>ジャンル <%= @genre.category %></h3>
	<h3>税込価格（税抜き価格） <%= @admins_product.non_taxed_price * 1.1 %>
		 円</h3>
	<h3>販売ステータス <%= @admins_product.is_capable %></h3>
	<%= link_to "編集する", edit_admins_product_path(@admins_product), data: {"turbolinks" => false},  class: "btn btn-primary pull-right" %>
    </div>
  </div>
</div>

