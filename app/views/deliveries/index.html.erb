<div class="container">
	<div class="row">
		<div class="delivery-index">
			<h2 class="delivery-index-title">配送先一覧/登録</h2>
				<% if flash[:notice] %>
				<p class="success-message"><%= flash[:notice] %></p>
				<% end %>

			<div class="create-delivery-section">
			<%= form_for(@delivery) do |f| %>
				<div class="create-delivery-table row">
			<!-- サイズ感不明 -->
					<div class="col-xs-7">
						<table class="table">
							<tbody>
								<tr class="row">
									<th class="col-xs-3">郵便番号</th>
									<td class="col-xs-9 row">
										<div class="col-xs-4">
											<%= f.text_field :zip_code, class:"form-control", placeholder: "4545555" %>
										</div>
									</td>
								</tr>
								<tr class="row">
									<th>住所</th>
									<td>
										<div class="col-xs-10">
											<%= f.text_field :address, class:"form-control", placeholder: "" %>
										</div>
									</td>
								</tr>
								<tr class="row">
									<th>宛名</th>
									<td>
										<div class="col-xs-5">
											<%= f.text_field :name, class:"form-control", placeholder: "" %>
										</div>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				<div class="create-delivery-btn-wrap row">
					<%= f.submit '登録する', class:"create-delivery-btn btn btn-primary" %>
				</div>
			<% end %>
			</div>
		</div>
	</div>
</div>