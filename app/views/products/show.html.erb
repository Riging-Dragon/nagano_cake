<div class="body-height">
<div class="container">
 <!-- 左側ジャンル検索画面 -->
 <div class="row">

    <table class="table table-bordered">
    <thead>
      <tr>
        <th>ジャンル検索</th>
          </tr>
<%= form_tag(products_path,:method => 'get' ) do %>
        <%= text_field_tag :search %>
        <%= submit_tag 'Search', :name => nil %>
        <% @genres.each do |genre| %>
<% end %>
<% end %>
    </thead>
    <tbody>
<% @genres.each do |genre| %>
<% end %>
    </tbody>
    </table>
   <!-- 右側商品詳細 -->
   <!--カート送信ボタンのコード -->
  <div class="col-md-6">
       <h2 class="text-center"><%= @product.name %></h2>
       <%= attachment_image_tag @product, :image, format: 'jpg' ,size: "200x200", fallback: "no_image.jpg" %>
    <ul class="list-unstyled">
      <li><%= @product.description %></li>
<% if customer_signed_in? %>
     <%= form_for(@cart_item) do |f| %>
    <%= f.hidden_field :product_id %>
    <h3>税込価格   <%= (@product.non_taxed_price * 1.1).round %>円</h3><br><!--.roundで端数消せる-->
    <%= f.select :count,(1..10).to_a, {}, class: "form-control" %>
    <%= f.submit "カートに入れる", class: 'btn btn-primary col-xs-5' %>
   
  <% end %><!-- ログインしていたらカートボタン表示 -->
     <%#= form_for( CartItems.new(product_id: @product_id)) do|f|  %>
        <%#= f.select :product_number, [*1..100] ,class:"form-control" %>
        <%#= f.hidden_field :product_id %>
        <%#= f.submit "カートに入れる", class: "btn btn-primary" %>
<%# end %>
<% end %>
    </ul>
  </div>
 </div>
</div>
</div>
</div>