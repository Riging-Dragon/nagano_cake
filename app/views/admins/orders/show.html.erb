<h1>注文履歴詳細</h1>

<div>
	<strong>購入者</strong>
	<%= @customer.name %>
</div>
<div>
	<strong>配送先</strong>
	<%= @order.ordered_zip_code %><br>
	<%= @order.ordered_address %><br>
	<%= @order.ordered_name %>
</div>
<div>
	<strong>支払方法</strong>
	<%= @order.order_method %>
</div>
<div>
	<strong>注文ステータス</strong>
	<%= form_with model: @order, url: admins_order_path ,method: :patch, local: true do |f| %>
	<%= f.select :order_status, Order.order_statuses.keys.map {|k| [k, k]} %>
</div>

<table>
	<tr>
		<th>商品名</th>
		<th>単価（税込）</th>
		<th>数量</th>
		<th>小計</th>
		<th>製作ステータス</th>
	</tr>
	<% @order_details.each do |detail| %>
	<tr>
		<td><%= detail.product.name %></td>
		<td><%= detail.ordered_price %></td>
		<td><%= detail.ordered_item_count %></td>
		<td><%= detail.subtotal_price %></td>
		<!--select-button-->
		<%= form_with model: detail, url:admins_order_path, method: :patch, local: true do |f| %>
		<td><%= f.select :production_status, f.production_status.keys.map {|k| [k, k]} %></td>
		<td><%=link_to '更新', admins_order(f) %></td>
	</tr>
	<% end %>
</table>

<div><strong>商品合計</strong><%= @total_price %></div>
<div><strong>送料</strong>800</div>
<div><strong>請求金額合計</strong><%= @order.total_sum + 800 %></div>
