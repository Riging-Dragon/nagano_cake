<div class="body-height">
<div class="container">
  <div class="row">
    <h2><u>新規会員登録</u></h2>
      <div class="col-xs-7">
        <table class="table">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "customers/shared/error_messages", resource: resource %>
              <tr>
                <div class="field">
                  <th><%= f.label :メールアドレス %><br /></th>
                  <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
                </div>
              </tr>
              <tr>
                <div class="field">
                  <th><%= f.label :パスワード %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> 文字以上)</em>
                  <% end %><br /></th>
                  <td><%= f.password_field :password, autocomplete: "new-password" %></td>
                </div>
              </tr>
              <tr>
                <div class="field">
                  <th><%= f.label :パスワード（確認用） %><br /></th>
                  <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
                </div>
              </tr>
        </table>
      </div>
  </div>
  <div class="row">
            <div class="actions">
              <%= f.submit "新規登録", class:"btn btn-primary" %>
            </div>
          <% end %>

          <h4><u>既に登録済みの方</u></h4>
          <%= render "customers/shared/links" %>
  </div>
</div>
</div>