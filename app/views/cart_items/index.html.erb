<!-- ヘッダー -->

<!-- 内容 -->
<div class ="container">
	<div class ="row">
		<div class ="cart_item-index">
		<h2 class ="cart_item-index-title">ショッピングカート</h2>
			<div class="btn-box text-right">
				<% if flash[:notice] %>
					<p class="success-message"><%= flash[:notice] %></p>
				<% end %>
				<div class="btn-box text-right">
					<%= link_to "カートを空にする", cart_items_path, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class:"btn btn-danger" %>
				</div>
			</div>
			<table>
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価(税込)</th>
						<th>数量</th>
						<th>小計</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @customer.cart_items.each do |cart_item| %>
					<tr>
						<td>
							<%= attachment_image_tag cart_item.item, :image, size: "30x30", fallback: "no_image.jpg" %>
							<%= cart_item.product.name %>
						</td>
						<td><%= cart_item.product.non_taxed_price * 1.1 %>円</td>
						<td class="text-right">
							<%= form_for cart_item , html: {class:"form-inline"} do |f| %>
								<div class="form-group">
									<%= f.select :count,(1..10).to_a, {}, class: "form-control" %>
									<%= f.submit "変更", class:"btn btn-primary" %>
								</div>
							<% end %>
						</td>
						<td><%= cart.item.subtotal_price %>円</td>
						<td><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, class:"btn btn-danger" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<!-- 買い物を続けるbtn、合計金額、情報入力に進むbtn -->
			<div class="cart-total-table row">
				<div class="col-xs-8 return-shopping-btn-wrapper">
					<%= link_to "買い物を続ける", root_path, class:"btn btn-default" %>
				</div>
				<div class="col-xs-4">
					<table class="table">
						<tbody>
							<th class="active">合計金額</th>
							<td class="text-right"><%= @customer.cart_item_sum %>円</td>
						</tbody>
					</table>
				</div>
			</div>
		    <% if current_customer.cart_items.present? %>
			<div class="create-order-btn-wrapper col-xs-5 col-xs-offset-5">
				<%= link_to "情報入力に進む", new_order_path, class:"btn btn-primary form-control" %>
		    </div>
		    <% end %>
		</div>
	</div>
</div>


