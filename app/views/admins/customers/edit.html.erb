<div class="body-height">
<div class="container">
	<h2 class="admin-customers-edit-title">会員情報編集</h2>

<%= form_for([:admins, @customer], html: { class: "form-inline"}) do |f| %>
	<% if @customer.errors.any? %>
		<div id="error_explanation">
		<h3><%= @customer.errors.count %> errors prohibited this obj from being saved:</h3>
		<ul>
		<% @customer.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
		</ul>
		</div>
	<% end %>
	<table class="row table admin-customers-edit-table">
		<tr>
			<th class="col-xs-2"><%= f.label "会員ID" %></th>
			<td class="col-xs-10"><%= @customer.id %></td>
		</tr>
		<tr>
			<th><%= f.label "氏名" %></th>
			<td>
			<%= f.text_field :last_name_kanji, class:"form-control" %>
			<%= f.text_field :first_name_kanji, class:"form-control" %>
			</td>
		</tr>
		<tr>
			<th><%= f.label "フリガナ" %></th>
			<td>
			<%= f.text_field :last_name_kana, class:"form-control" %>
			<%= f.text_field :first_name_kana, class:"form-control" %>
			</td>
		</tr>
			<th><%= f.label "郵便番号" %></th>
			<td><%= f.text_field :zip_code, class:"form-control" %></td>
		</tr>
		<tr>
			<th><%= f.label "住所" %></th>
			<td><%= f.text_field :address, class:"form-control", style:"width: 60%;" %></td>
		</tr>
		<tr>
			<th><%= f.label "電話番号" %></th>
			<td><%= f.text_field :phone_number, class:"form-control" %></td>
		</tr>
		<tr>
			<th><%= f.label "メールアドレス" %></th>
			<td><%= f.text_field :email, class:"form-control" %></td>
		</tr>
		<tr>
			<th><%= f.label "会員ステータス" %></th>
			<td>
			<%= f.radio_button :is_enabled, :true %>
			<%= f.label :is_enabled, "有効会員" %>
			<%= f.radio_button :is_enabled, :false %>
			<%= f.label :is_enabled, "退会済み" %>
			</td>
		</tr>
	</table>

	<div class="row">
	<%= f.submit "変更を保存する", class:"btn btn-success" %>
	</div>
	<% end %>
</div>
</div>